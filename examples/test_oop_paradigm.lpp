#pragma paradigm oop

// This file demonstrates OOP paradigm
// Using classes definition (instantiation may not be fully supported yet)

class Counter {
    fn increment(x: int) -> int {
        return x + 1;
    }
    
    fn double(x: int) -> int {
        return x * 2;
    }
}

class Calculator {
    fn add(a: int, b: int) -> int {
        return a + b;
    }
    
    fn multiply(a: int, b: int) -> int {
        return a * b;
    }
}

fn main() -> int {
    // OOP paradigm allows class definitions
    // The key is object-oriented design with classes
    let x = 5;
    let y = 10;
    let sum = x + y;
    
    return 0;
}
