#pragma paradigm functional

// This file demonstrates functional paradigm enforcement

fn factorial(n: int) -> int {
    if (n == 0) {
        return 1;
    }
    return n * factorial(n - 1);
}

fn double(x: int) -> int {
    return x * 2;
}

fn square(x: int) -> int {
    return x * x;
}

fn is_even(x: int) -> bool {
    return x % 2 == 0;
}

fn sum(a: int, b: int) -> int {
    return a + b;
}

fn main() -> int {
    let result = factorial(5);
    
    let nums = [1, 2, 3, 4, 5];
    let doubled = nums @ (x -> double(x));
    let squared = nums @ (x -> square(x));
    
    return 0;
}
