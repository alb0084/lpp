#pragma paradigm imperative

// This file demonstrates imperative paradigm with explicit control flow

fn sum_five_numbers() -> int {
    let mut sum = 0;
    let mut i = 0;
    
    while (i < 5) {
        sum = sum + i;
        i = i + 1;
    }
    
    return sum;
}

fn find_max_of_five() -> int {
    let a = 5;
    let b = 2;
    let c = 8;
    let d = 1;
    let e = 9;
    
    let mut max = a;
    
    if (b > max) {
        max = b;
    }
    if (c > max) {
        max = c;
    }
    if (d > max) {
        max = d;
    }
    if (e > max) {
        max = e;
    }
    
    return max;
}

fn count_to_ten() -> int {
    let mut count = 0;
    let mut i = 1;
    
    while (i <= 10) {
        count = count + 1;
        i = i + 1;
    }
    
    return count;
}

