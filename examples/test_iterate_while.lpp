// Test iterate-while with condition and step

fn main() -> int {
    print("Testing iterate-while operator");
    
    // Generate evens: start=0, while < 20, step=+2
    let evens = 0 !! (x -> x < 20) $ (x -> x + 2);
    print(evens);
    
    // Powers of 2
    let powers = 1 !! (x -> x < 100) $ (x -> x * 2);
    print(powers);
    
    return 0;
}
